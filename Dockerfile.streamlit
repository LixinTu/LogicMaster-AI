FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY app.py .
COPY engine/ ./engine/
COPY utils/ ./utils/
COPY llm_service.py .
COPY logicmaster.db .

ENV PYTHONUNBUFFERED=1

CMD ["streamlit", "run", "app.py", "--server.port", "8501", "--server.address", "0.0.0.0"]
